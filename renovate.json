{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "America/Chicago",
  "ignorePaths": [
    "argo/wailord/game-svcs/**"
  ],
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeSchedule": [
        "after 11pm",
        "before 5am"
      ],
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/onemorebyte/plex"
      ],
      "versioning": "semver"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "values.yaml"
      ],
      "matchStrings": [
        "repository: (?<depName>hotio\\/.*)\\n\\ *tag: \"release-(?<currentValue>.*)\""
      ],
      "extractVersionTemplate": "^release-(?<version>.*)$",
      "datasourceTemplate": "docker"
    }
  ]
}
