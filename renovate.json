{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "America/Chicago",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeSchedule": [
        "after 11pm every day",
        "before 5am every day",
      ],
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
